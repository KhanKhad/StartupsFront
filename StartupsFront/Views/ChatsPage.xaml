<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StartupsFront.Views.ChatsPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding Chats}" SelectedItem="{Binding SelectedChat}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding SelectedChat, Source={x:Reference listView}}"/>
                            </Grid.GestureRecognizers>

                            <Label Text="{Binding LastMessage}"/>

                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>